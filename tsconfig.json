{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "paths": { 
      "@/*": ["./src/*"],
      "@@/*": ["./src/.umi/*"]
    }
  },
  "extends": "./src/.umi/tsconfig.json",
  "include": [
    "src/**/*",
    "config/**/*",
    "mock/**/*",
    "src/**/*",
  ]
}
